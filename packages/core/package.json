{
  "name": "@activeledger/activecore",
  "version": "2.1.2",
  "description": "This package contains the basic API application to access the data stored on Activeledger.",
  "keywords": [
    "blockchain",
    "dlt",
    "distributed ledger technology",
    "ledger",
    "smart contracts",
    "activeledger",
    "network",
    "node"
  ],
  "homepage": "https://activeledger.io",
  "preferGlobal": true,
  "bin": {
    "activecore": "./lib/index.js"
  },
  "scripts": {
    "build:commonjs": "tsc --outDir lib --module commonjs && copyfiles -f ./src/openapi.json ./lib",
    "build": "npm run build:commonjs",
    "start": "node lib/index.js",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "lib"
  ],
  "types": "./lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/activeledger/activeledger.git"
  },
  "bugs": {
    "url": "https://github.com/activeledger/activeledger/issues"
  },
  "author": "Activeledger",
  "license": "MIT",
  "dependencies": {
    "@activeledger/activecrypto": "^2.1.1",
    "@activeledger/activelogger": "^2.1.1",
    "@activeledger/activenetwork": "^2.1.2",
    "@activeledger/activeoptions": "^2.1.1",
    "@activeledger/activequery": "^2.1.1",
    "@activeledger/activestorage": "^2.1.1",
    "@activeledger/activeutilities": "^2.1.1",
    "@activeledger/httpd": "^2.1.1"
  },
  "devDependencies": {
    "@types/node": "^12.6.9",
    "copyfiles": "^2.1.1"
  }
}
