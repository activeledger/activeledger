{
  "name": "activeledger-monorepo",
  "private": true,
  "scripts": {
    "setup": "lerna clean --yes && npm run unlink && lerna bootstrap && npm rum build && lerna bootstrap",
    "build": "npm run build:definitions && npm run build:logger && npm run build:utilities && npm run build:httpd && npm run build:options && npm rum build:storage && npm run build:crypto && npm run build:query && npm run build:contracts && npm run build:protocol && npm run build:network && npm run build:ledger && npm run build:restore && npm run build:core && npm rum build:hybrid && npm run link",
    "build:utilities": "cd ./packages/utilities/ && npm run build",
    "build:options": "cd ./packages/options/ && npm run build",
    "build:logger": "cd ./packages/logger/ && npm run build",
    "build:hybrid": "cd ./packages/hybrid/ && npm run build",
    "build:httpd": "cd ./packages/httpd/ && npm run build",
    "build:definitions": "cd ./packages/definitions/ && npm run build",
    "build:crypto": "cd ./packages/crypto/ && npm run build",
    "build:query": "cd ./packages/query/ && npm run build",
    "build:contracts": "cd ./packages/contracts/ && npm run build",
    "build:toolkits": "cd ./packages/toolkits/ && npm run build",
    "build:storage": "cd ./packages/storage/ && npm run build",
    "build:protocol": "cd ./packages/protocol/ && npm run build",
    "build:network": "cd ./packages/network/ && npm run build",
    "build:ledger": "cd ./packages/activeledger/ && npm run build",
    "build:restore": "cd ./packages/restore/ && npm run build",
    "build:core": "cd ./packages/core/ && npm run build",
    "link":"npm run link:ledger && npm run link:core && npm run link:restore && npm run link:hybrid",
    "unlink": "npm run unlink:ledger && npm run unlink:restore && npm run unlink:core && npm run unlink:hybrid",
    "unlink:ledger": "npm unlink @activeledger/activeledger -g",
    "unlink:core": "npm unlink @activeledger/activecore -g",
    "unlink:restore": "npm unlink @activeledger/activerestore -g",
    "unlink:hybrid": "npm unlink @activeledger/activehybrid -g",
    "link:ledger": "cd ./packages/activeledger/ && npm link",
    "link:core": "cd ./packages/restore/ && npm link",
    "link:restore": "cd ./packages/core/ && npm link",
    "link:hybrid": "cd ./packages/hybrid/ && npm link",
    "test": "mocha -r ts-node/register/transpile-only tests/**/*.ts -- --no-warnings"
  },
  "devDependencies": {
    "@types/chai": "4.3.1",
    "@types/mocha": "9.1.1",
    "@types/node": "18.0.0",
    "chai": "4.3.6",
    "lerna": "5.6.2",
    "mocha": "10.0.0",
    "nyc": "15.1.0",
    "ts-node": "10.8.1",
    "typescript": "4.7.3"
  }
}
